rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allows any user to read or write to the Politecnico collection
    // This is useful for public forms like registration, but you should
    // secure your data further based on your application's needs.
    match /Politecnico/{document=**} {
      allow read, write: if true;
    }
    
    // Fallback for any other path, requires authentication
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
